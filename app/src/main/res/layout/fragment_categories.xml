<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#e6e6e6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/Home_Menu_Featured"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/destacados" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_Menu_Featured"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Destacados" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Home_Menu_Bars"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/bares" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_Menu_Bars"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Bares" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Menu_Food"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/comida" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_Menu_Food"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Comida" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Menu_Coffee"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/cafeterias" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_Menu_Coffee"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Cafeterias" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Menu_Gyms"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/gimnasios" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_Menu_Gyms"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Gimnasios" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Menu_Materials"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/materialescolar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_Menu_Materials"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Materiales" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Menu_Rent"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/dondevivir" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_Menu_Rent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Vivienda" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Menu_Work"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/trabajos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_Menu_Work"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Trabajos" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Menu_Promos"
                android:layout_width="100dp"
                android:layout_height="100dp"

                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/promociones" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home_Menu_Promos"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Promociones" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
