<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:gravity="center"
    android:paddingEnd="15dp"
    android:paddingStart="15dp">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_bars"
        android:layout_alignParentStart="true"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="50%">

        <ImageButton
            android:id="@+id/menu_barsButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/bars"
            app:layout_heightPercent="85%"
            app:layout_widthPercent="100%" />

        <TextView
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="Bares"
            android:textStyle="bold"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_food"
        android:layout_alignParentEnd="true"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="50%">

        <ImageButton
            android:id="@+id/menu_foodButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/food"
            app:layout_heightPercent="85%"
            app:layout_widthPercent="100%" />

        <TextView
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="Comida"
            android:textStyle="bold"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_gyms"
        android:layout_alignParentStart="true"
        android:layout_below="@id/layout_bars"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="50%">

        <ImageButton
            android:id="@+id/menu_gymsButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/gyms"
            app:layout_heightPercent="85%"
            app:layout_widthPercent="100%" />

        <TextView
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="Gimnasios"
            android:textStyle="bold"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_residences"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/layout_food"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="50%">

        <ImageButton
            android:id="@+id/menu_residencesButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/residences"
            app:layout_heightPercent="85%"
            app:layout_widthPercent="100%" />

        <TextView
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="Residencias"
            android:textStyle="bold"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_alignParentStart="true"
        android:layout_below="@id/layout_gyms"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="50%">

        <ImageButton
            android:id="@+id/menu_transportButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/transport"
            app:layout_heightPercent="85%"
            app:layout_widthPercent="100%" />

        <TextView
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="Transporte"
            android:textStyle="bold"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_below="@id/layout_residences"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="50%">

        <ImageButton
            android:id="@+id/menu_promosButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/promos"
            app:layout_heightPercent="85%"
            app:layout_widthPercent="100%" />

        <TextView
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="Canjear"
            android:textStyle="bold"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="100%" />
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>