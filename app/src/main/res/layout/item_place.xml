<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_place_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/item_place_gradient"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/item_place_picture"
        android:background="@drawable/gradient" />

    <TextView
        android:id="@+id/item_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_place_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:text="Titulo"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/home_text_size" />

    <TextView
        android:id="@+id/item_place_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_place_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:text="Subtitulo"
        android:textColor="@color/colorAccent" />

</RelativeLayout>