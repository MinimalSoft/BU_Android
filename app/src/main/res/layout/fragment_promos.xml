<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MinimalSoft.BUniversitaria.Promos.PromosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Promo_Bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/promo_bar" />

        <ImageView
            android:id="@+id/Promo_Food"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/promo_food" />

        <ImageView
            android:id="@+id/Promo_Gym"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/promo_gym" />

    </LinearLayout>
</FrameLayout>
