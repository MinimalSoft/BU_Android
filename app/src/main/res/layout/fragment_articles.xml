<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context="com.MinimalSoft.BrujulaUniversitaria.Tabs.Articles">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/entry_p"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/publicidad" />

                <View
                    android:id="@+id/gradientp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/entry_titulop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/entry_p"
                    android:layout_marginLeft="7dp"
                    android:text="IZettle"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:textSize="@dimen/home_text_size" />

            </RelativeLayout>

        </FrameLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/entry_foto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post1" />

                <View
                    android:id="@+id/gradient"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/entry_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/gradient"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="7dp"
                    android:text="El Dilema de la Universidad"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:textSize="@dimen/home_text_size" />

            </RelativeLayout>

        </FrameLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:id="@+id/entry_foto1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post2" />

                <View
                    android:id="@+id/gradient1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignBottom="@+id/entry_foto1"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/entry_titulo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/entry_foto1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="7dp"
                    android:text="Galeria"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:textSize="@dimen/home_text_size" />

            </RelativeLayout>

        </FrameLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/entry_foto2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post3" />

                <View
                    android:id="@+id/gradient2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignBottom="@+id/entry_foto2"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/entry_titulo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/entry_foto2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="7dp"
                    android:text="¡Alcanza tu meta!"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:textSize="@dimen/home_text_size" />


            </RelativeLayout>

        </FrameLayout>
        ~

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/entry_foto3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post4" />

                <View
                    android:id="@+id/gradient3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignBottom="@+id/entry_foto3"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/entry_titulo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/entry_foto3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="7dp"
                    android:text="¡Viajar es vivir!"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:textSize="@dimen/home_text_size" />


            </RelativeLayout>

        </FrameLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/entry_foto4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post5" />

                <View
                    android:id="@+id/gradient4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignBottom="@+id/entry_foto4"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/entry_titulo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/entry_foto4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="7dp"
                    android:text="La cultura del autentico Citadino"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:textSize="@dimen/home_text_size" />

            </RelativeLayout>

        </FrameLayout>

    </LinearLayout>

</ScrollView>