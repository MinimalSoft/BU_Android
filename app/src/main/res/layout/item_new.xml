<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_card_margin"
        android:layout_marginLeft="@dimen/new_card_margin"
        android:layout_marginRight="@dimen/new_card_margin">

        <LinearLayout
            style="@style/Widget.CardNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/new_picture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/default_profile" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/new_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="David Morales"
                        android:textColor="@color/black_overlay"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/new_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:text="mar. 30 a las 2:35 pm"
                        android:textColor="@color/black_overlay" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/new_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingLeft="16dp"
                android:text="Este es un Ejemplo de Post para el Newsfeed de BU" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.like.LikeButton
                    app:icon_type="heart"
                    app:icon_size="20dp"
                    android:id="@+id/star_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Love it"/>

                <com.like.LikeButton
                    app:icon_size="20dp"
                    app:like_drawable="@drawable/poo_on"
                    app:unlike_drawable="@drawable/poo_on"
                    android:id="@+id/star_butto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Me Encanta"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

